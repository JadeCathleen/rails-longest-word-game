<h1>New game</h1>


<div class="container-letters">
  <% @grid.each do |letter| %>
    <div class="padding-letter">
      <%= letter%>
    </div>
  <%end%>
</div>

<form action="score" method="post">
    <label for="word">What is the longest word you can find ?</label>
    <div class="user-input">
      <input type="text" name="word" class="insert">
      <input type="submit" value="Play" class="btn">
    </div>
    <%= hidden_field_tag :grid, @grid.join(',') %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
